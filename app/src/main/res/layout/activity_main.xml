<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alex.waveview.MainActivity">

    <TextView
        android:id="@+id/wlv"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#CCCCCC"
        android:gravity="center"
        android:text="波浪图" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wlv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <github.alex.waveview.WaveView xmlns:WaveView="http://schemas.android.com/apk/res-auto"
            android:id="@+id/wv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            WaveView:amplitude="36"
            WaveView:backgroundColor="#CCCCCC"
            WaveView:firstWaveColor="#E51F62"
            WaveView:secondWaveColor="#88E51F62"
            WaveView:speed="4"
            WaveView:waterProgress="50"
            WaveView:waveSize="200dp" />
    </LinearLayout>


</RelativeLayout>
